@model EShop.Models.Order
@{
    ViewBag.Title = "Chi tiết";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Chi tiết đơn hàng @Model.OrderId</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Mã sản phẩm</th>
            <th>Tên sản phẩm</th>
            <th>Số lượng</th>
            <th>đơn giá</th>
            <th>thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderItems)
        {
            <tr>
                <td>
                    @item.Product.ProductId
                </td>
                <td>
                    @item.Product.Title
                </td>
                <td>
                    @item.Amount
                </td>
                <td>
                    @item.ProductPrice.ToString("c")
                </td>
                <td>
                    @item.Price.ToString("c")
                </td>
            </tr>
        }
    </tbody>
</table>
<p>Tổng tiền: @Model.Total.ToString("c")</p>
